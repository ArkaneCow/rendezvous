<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".controller.AddFriendActivity"
    android:background="#6E7B8B">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Friends"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textColor="#00008B"
        android:textSize="35dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/friendListView"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/friendListView"
        android:layout_alignParentStart="true"
        android:columnCount="2"
        android:rowCount="1">

        <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:id="@+id/refreshButton"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#6E7B8B"
                android:background="#00008B" android:onClick="refreshFriendsNearby"/>

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Add by User"
            android:id="@+id/usernameButton"
            android:layout_column="1"
            android:layout_row="0"
            android:textColor="#6E7B8B"
            android:background="#00008B" />
    </GridLayout>

</RelativeLayout>
